{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "nodenext",
    "target": "es2022",
    "baseUrl": "./",
    "outDir": "dist",
    "rootDir": "src",
    "paths": { "#/*": ["src/*"] },
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
